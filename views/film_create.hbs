{{#extends 'base'}} {{#block 'head'}}Create New Film{{/block}}
{{#block 'content'}}

<h1>Create New Film</h1>
<form method="POST">
    <div>
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="title" />
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="description" />
        <label class="form-label">Release Year</label>
        <input type="text" class="form-control" name="release_year" />
        <label class="form-label">Original Language</label>
        <select class="form-control" name="original_language_id">
            {{#each languages}}
            <option value="{{this.language_id}}">{{this.name}}</option>
            {{/each}}
        </select>
        <label class="form-label">Language</label>
        <select class="form-control" name="language_id">
            {{#each languages}}
            <option value="{{this.language_id}}">{{this.name}}</option>
            {{/each}}
        </select>
        <label class="form-label">Rental Duration</label>
        <input type="text" class="form-control" name="rental_duration" />
        <label class="form-label">Rental Rate</label>
        <input type="text" class="form-control" name="rental_rate" />
        <label class="form-label">Length</label>
        <input type="text" class="form-control" name="length" />
        <label class="form-label">Replacement Cost</label>
        <input type="text" class="form-control" name="replacement_cost" />
        <label class="form-label">Actors</label>
        <select class="form-control" name="actors" id="actors">
            {{#each actors}}
            <option value="{{this.actor_id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <input type="submit" value="Submit Film" class="mt-3 btn btn-primary" />
    </div>
</form>

